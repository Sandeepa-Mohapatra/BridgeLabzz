<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FundooApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <StackLayout Margin="0,30,0,30" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Frame CornerRadius="10" BorderColor="Black" HasShadow="True" WidthRequest="300">
                <StackLayout>
                    <StackLayout
                    BackgroundColor="Transparent" 
                    Margin="0,0,0,60">
                        <Image
                    Source="img3.png"
                    WidthRequest="60"
                    HorizontalOptions="Center" 
                    Margin="0,20,0,0"/>
                        <Label
                    
                    Text="LogIn"
                    FontSize="Large" 
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    TextColor="MediumVioletRed"
                    Margin="5,20,20,0"/>
                        <Label
                    
                    Text="Welcome To FundooNotes"
                    FontSize="Large" 
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    TextColor="SeaGreen"
                    Margin="5,20,20,0"/>
                    </StackLayout>
                    <StackLayout>
                        <Entry
                        Placeholder="Firstname" 
                        Margin="0,0,0,10"
                        x:Name="Firstname"/>
                        <Entry 
                        Placeholder="Lastname" 
                        Margin="0,0,0,10" 
                        x:Name="Lastname"/>
                        <Entry 
                        Placeholder="EmailId" 
                        Margin="0,0,0,10"
                        x:Name="EmailId"/>
                        <Entry 
                        Placeholder="Password"
                        IsPassword="true" 
                        Margin="0,0,0,10" 
                        x:Name="Password"/>
                    </StackLayout>
                    <StackLayout 
                    Orientation="Horizontal"
                    Margin="0,50,0,0">
                        <Button
                        Text="LogIn"
                        TextColor="White"
                        Clicked="Login_btn"
                        BackgroundColor="#1B1BC3" 
                        WidthRequest="100"
                        FontAttributes="Bold"
                        Margin="30,0,10,30"/>
                        <Button 
                        Text="SignUp" 
                        TextColor="White"
                        Clicked="Signup_btn"
                        BackgroundColor="#1B1BC3"
                        WidthRequest="100"
                        FontAttributes="Bold" Margin="10,0,30,30"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </StackLayout>
</ContentPage>
